{
  "name": "iot-monolith",
  "version": "1.0.0",
  "description": "monolithic approach to Node.js-enabled home automation",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run --silent clear && npm run --silent tsc",
    "build:watch": "npm run --silent clear && npm run --silent tsc:watch",
    "clear": "rm -rf dist/*",
    "deploy": "scripts/deploy.sh",
    "format:verify": "prettier --check '**/*.{js,json,jsx,ts,tsx}'",
    "format:write": "prettier --write '**/*.{js,json,jsx,ts,tsx}'",
    "lint": "tsc --noEmit; eslint --ext js,jsx,ts,tsx src",
    "lint:ts-only": "tsc --noEmit; eslint --ext ts,tsx src",
    "lint:fix": "eslint --fix --ext js,jsx,ts,tsx src",
    "push": "git push origin HEAD --force && git push github HEAD --force",
    "run": "CONFIG_PATH=./config LOG_LEVEL=0 LOG_TELEGRAM=false node --use_strict --experimental-modules --enable-source-maps",
    "start": "echo \"use systemd with 'iot-monolith.service'-file to start this service in a production environment\nfor testing purposes, use 'npm run start:dev'\"",
    "start:dev": "npm run --silent run dist/src/index.js",
    "start:file": "npm run --silent run",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "usp.wurstsalat.cloud:git/iot-monolith.git"
  },
  "author": "Lennart Pelz <mail@mrpelz.de>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-plugin-import": "^2.22.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "type": "module",
  "dependencies": {
    "node-fetch": "^2.6.1"
  }
}