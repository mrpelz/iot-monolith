{
  "name": "@iot/iot-monolith",
  "version": "1.0.1-jsx-without-jsx-d5ee6c86.0",
  "description": "monolithic approach to Node.js-enabled home automation",
  "repository": {
    "type": "git",
    "url": "https://git.i.wurstsalat.cloud/iot/iot-monolith.git"
  },
  "license": "UNLICENSED",
  "author": "Lennart Pelz <mail@mrpelz.de>",
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./tree": {
      "default": "./dist/lib/tree/main.js",
      "types": "./dist/lib/tree/main.d.ts"
    },
    "./tree-serialization": {
      "default": "./dist/lib/tree/operations/serialization.js",
      "types": "./dist/lib/tree/operations/serialization.d.ts"
    },
    "./observable": {
      "default": "./dist/lib/observable.js",
      "types": "./dist/lib/observable.d.ts"
    },
    "./state": {
      "default": "./dist/lib/state.js",
      "types": "./dist/lib/state.d.ts"
    },
    "./oop": {
      "default": "./dist/lib/oop.js",
      "types": "./dist/lib/oop.d.ts"
    }
  },
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist/**/*.{js,map,ts}"
  ],
  "scripts": {
    "build": "npm run --silent tsc",
    "build:clean": "npm run --silent clear && npm run --silent tsc",
    "build:clean:watch": "npm run --silent clear && npm run --silent tsc:watch",
    "build:watch": "npm run --silent tsc:watch",
    "clear": "rm -rf dist",
    "format:verify": "prettier --check '**/*.{js,json,ts}'",
    "format:write": "prettier --write '**/*.{js,json,ts}'",
    "lint": "tsc --noEmit; eslint --ext js,ts,tsx src",
    "lint:fix": "eslint --fix --ext js,ts,tsx src",
    "push": "git push origin HEAD --force && git push github HEAD --force",
    "remote:deploy": "scripts/deploy/remote-deploy.sh",
    "remote:deploy:watch": "scripts/deploy/remote-deploy-watch.sh",
    "remote:restart": "scripts/deploy/remote-restart.sh",
    "remote:restart:watch": "scripts/deploy/remote-restart-watch.sh",
    "remote:view-persistence": "scripts/deploy/remote-view-persistence.sh",
    "remote:watch": "scripts/deploy/remote-watch.sh",
    "run": "LOG_LEVEL=7 LOG_TELEGRAM=0 node --use_strict --experimental-modules --enable-source-maps --stack-trace-limit=100",
    "start": "echo \"use systemd with 'iot-monolith.service'-file to start this service in a production environment\nfor testing purposes, use 'npm run start:dev'\"",
    "start:dev": "npm run --silent run dist/main.js",
    "start:file": "npm run --silent run",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch"
  },
  "dependencies": {
    "@oozcitak/dom": "latest",
    "prom-client": "latest",
    "proper-tags": "latest",
    "suncalc": "latest",
    "uuid": "latest",
    "ws": "latest"
  },
  "devDependencies": {
    "@mrpelz/boilerplate-node": "latest",
    "@types/suncalc": "latest",
    "@types/uuid": "latest",
    "@types/ws": "latest",
    "undici": "latest"
  }
}
